{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "esNext",
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
  },
  "includes": [
    "./types/**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    ".storybook",
    "templates/component",
  ],
  "include": [
    "src",
  ]
}
